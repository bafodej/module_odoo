<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Formulaire -->
    <record id="view_certification_form" model="ir.ui.view">
        <field name="name">certification.management.form</field>
        <field name="model">certification.management</field>
        <field name="arch" type="xml">
            <form string="Certification">
                <header>
                    <button name="action_request" type="object" string="Demande Reçue" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_schedule_audit" type="object" string="Planifier Audit" 
                            class="oe_highlight" invisible="state != 'requested'"/>
                    <button name="action_audit_done" type="object" string="Audit Réalisé" 
                            class="oe_highlight" invisible="state != 'audit_scheduled'"/>
                    <button name="action_certify" type="object" string="Certifier" 
                            class="oe_highlight" invisible="state != 'audit_done'"/>
                    <button name="action_reject" type="object" string="Rejeter" 
                            invisible="state in ['certified', 'rejected', 'cancelled']"/>
                    <button name="action_cancel" type="object" string="Annuler" 
                            invisible="state in ['certified', 'cancelled']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,requested,audit_scheduled,audit_done,certified"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="certification_type"/>
                            <field name="auditor_id"/>
                        </group>
                        <group>
                            <field name="date_request"/>
                            <field name="date_audit"/>
                            <field name="date_certification"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Notes internes sur la certification..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Liste -->
    <record id="view_certification_list" model="ir.ui.view">
        <field name="name">certification.management.list</field>
        <field name="model">certification.management</field>
        <field name="arch" type="xml">
            <list string="Certifications">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="certification_type"/>
                <field name="date_audit"/>
                <field name="auditor_id"/>
                <field name="state" decoration-success="state == 'certified'" 
                       decoration-danger="state == 'rejected'"
                       decoration-warning="state in ('requested', 'audit_scheduled')"
                       widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Vue Recherche -->
    <record id="view_certification_search" model="ir.ui.view">
        <field name="name">certification.management.search</field>
        <field name="model">certification.management</field>
        <field name="arch" type="xml">
            <search string="Rechercher Certifications">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="certification_type"/>
                <field name="auditor_id"/>
                <filter string="En Cours" name="in_progress" 
                        domain="[('state', 'in', ['draft', 'requested', 'audit_scheduled', 'audit_done'])]"/>
                <filter string="Certifiés" name="certified" 
                        domain="[('state', '=', 'certified')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Statut" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'certification_type'}"/>
                    <filter string="Auditeur" name="group_auditor" context="{'group_by': 'auditor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_certification" model="ir.actions.act_window">
        <field name="name">Certifications</field>
        <field name="res_model">certification.management</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle demande de certification
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_certification_root" name="Certifications" sequence="10"/>
    <menuitem id="menu_certification" name="Certifications" parent="menu_certification_root" 
              action="action_certification" sequence="10"/>
</odoo>
